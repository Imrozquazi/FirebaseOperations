<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.piyushd.firebaseoperations.MainActivity"
    android:background="#dfdf">

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:layout_marginTop="33dp"
        android:hint="Enter Email"
        android:textColor="#000"
        android:id="@+id/email"
        />


    <EditText

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Enter Name"

        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:id="@+id/Name"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Roll number"

        android:textColor="#000"
        android:layout_marginTop="26dp"
        android:id="@+id/Roll"
        android:layout_below="@+id/Name"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name" />

    <Button
        android:id="@+id/insert"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Insert"
        android:textColor="#FFF"
        android:background="#000"
        android:clickable="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="38dp"

        android:layout_alignBaseline="@+id/delete"
        android:layout_alignBottom="@+id/delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/delete"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Delete"
        android:textColor="#FFF"
        android:background="#000"
        android:clickable="true"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/Roll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/update"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Update"
        android:textColor="#FFF"
        android:background="#000"
        android:clickable="true"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/delete"
        android:layout_alignLeft="@+id/insert"
        android:layout_alignStart="@+id/insert" />

    <Button
        android:id="@+id/showdata"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Show"
        android:textColor="#FFF"
        android:background="#000"
        android:clickable="true"
        android:layout_alignBaseline="@+id/update"
        android:layout_alignBottom="@+id/update"
        android:layout_alignLeft="@+id/delete"
        android:layout_alignStart="@+id/delete" />



</RelativeLayout>
